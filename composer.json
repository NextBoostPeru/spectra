{
    "name": "spectra/backend",
    "description": "Base backend setup with PSR-12 tooling",
    "type": "project",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.6",
        "robmorgan/phinx": "^0.16.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "lint": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff",
        "analyse": "phpstan analyse",
        "migrate": "php database/migrate.php migrate",
        "seed": "php database/migrate.php seed",
        "test": [
            "@lint",
            "@analyse"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
